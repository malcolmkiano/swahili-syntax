{
  "name": "Swahili",
  "scopeName": "source.swh",
  "fileTypes": ["swh"],
  "repository": {
    "general": {
      "patterns": [
        {
          "include": "#linecomment"
        },
        {
          "include": "#blockcomment"
        },
        {
          "include": "#number"
        },
        {
          "include": "#constant"
        },
        {
          "include": "#doublequotestring"
        },
        {
          "include": "#function"
        },
        {
          "include": "#functioncall"
        },
        {
          "include": "#ifblock"
        },
        {
          "include": "#forblock"
        },
        {
          "include": "#whileblock"
        },
        {
          "include": "#operator"
        },
        {
          "include": "#control"
        },
        {
          "include": "#keyword"
        },
        {
          "include": "#variable"
        }
      ]
    },
    "linecomment": {
      "name": "comment.line.double-slash.swh",
      "match": "(//).*$\n?",
      "captures": {
        "1": {
          "name": "punctuation.definition.comment.swh"
        }
      }
    },
    "blockcomment": {
      "name": "comment.block.swh",
      "begin": "/\\*",
      "end": "\\*/",
      "captures": {
        "0": {
          "name": "punctuation.definition.comment.swh"
        }
      }
    },
    "constant": {
      "name": "constant.language.swh",
      "match": "tupu|kweli|uwongo"
    },
    "number": {
      "name": "constant.numeric.swh",
      "match": "(?<![\\d.])\\s0x[a-fA-F\\d]+|\\b\\d+(\\.\\d+)?([eE]-?\\d+)?|\\.\\d+([eE]-?\\d+)?"
    },
    "doublequotestring": {
      "name": "string.quoted.double.swh",
      "begin": "\"",
      "beginCaptures": {
        "0": {
          "name": "punctuation.definition.string.begin.swh"
        }
      },
      "end": "\"",
      "endCaptures": {
        "0": {
          "name": "punctuation.definition.string.end.swh"
        }
      },
      "patterns": [
        {
          "match": "\\\\.",
          "name": "constant.character.escape.swh"
        }
      ]
    },
    "function": {
      "name": "meta.function.swh",
      "begin": "\\b(shughuli)(\\s+(((\\w(\\w|\\d)*)\\.)*(\\w(\\w|\\d)*)))?\\s*(\\()((\\.\\.\\.|\\w(\\w|\\d)*)(,\\s*(\\.\\.\\.|\\w(\\w|\\d)*))*)?(\\))",
      "beginCaptures": {
        "1": {
          "name": "keyword.other.swh"
        },
        "3": {
          "name": "entity.name.function.swh"
        },
        "10": {
          "name": "variable.parameter.function.swh"
        }
      },
      "end": "end",
      "endCaptures": {
        "0": {
          "name": "keyword.control.swh"
        }
      },
      "patterns": [
        {
          "include": "#general"
        }
      ]
    },
    "libfunctioncall": {
      "name": "meta.functioncall.swh",
      "match": "\\b(andika|soma|somaNambari|futa|niNambari|niJina|niOrodha|niShughuli|niTupu|Nambari|Jina|Tarehe|idadi|badili|anza|wamlambez))\\b(?=\\()",
      "beginCaptures": {
        "1": {
          "name": "support.function.swh"
        }
      },
      "end": "\\)",
      "patterns": [
        {
          "include": "#general"
        }
      ]
    },
    "functioncall": {
      "name": "meta.functioncall.swh",
      "begin": "((\\w(\\w|\\d)*[\\.:])*\\w(\\w|\\d)*)\\(",
      "beginCaptures": {
        "1": {
          "name": "entity.name.function.swh"
        }
      },
      "end": "\\)",
      "patterns": [
        {
          "include": "#general"
        }
      ]
    },
    "ifblock": {
      "name": "meta.ifblock.swh",
      "begin": "\\bkama\\b",
      "beginCaptures": {
        "0": {
          "name": "keyword.control.swh"
        }
      },
      "end": "\\bend\\b",
      "endCaptures": {
        "0": {
          "name": "keyword.control.swh"
        }
      },
      "patterns": [
        {
          "include": "#general"
        }
      ]
    },
    "forblock": {
      "name": "meta.forblock.swh",
      "begin": "\\bkwa\\b",
      "beginCaptures": {
        "0": {
          "name": "keyword.control.swh"
        }
      },
      "patterns": [
        {
          "include": "#general"
        }
      ]
    },
    "whileblock": {
      "name": "meta.whileblock.swh",
      "begin": "\\bambapo\\b",
      "beginCaptures": {
        "0": {
          "name": "keyword.control.swh"
        }
      },
      "patterns": [
        {
          "include": "#general"
        }
      ]
    },
    "operator": {
      "name": "keyword.operator.swh",
      "match": "(\\+|-|%|\\*|\\/|\\^|==|<=|>=|<|>|&&|\\|\\|)"
    },
    "control": {
      "name": "keyword.control.swh",
      "match": "\\b(ondoka|sivyo|kwa|mpaka|kama|au|rudisha|katika|ambapo|endelea)\\b"
    },
    "keyword": {
      "name": "keyword.other.swh",
      "match": "\\b(wacha|shughuli)\\b"
    },
    "variable": {
      "name": "variable.other.swh",
      "match": "([A-Za-z_][A-Za-z0-9_]*)"
    }
  },
  "patterns": [
    {
      "include": "#general"
    }
  ],
  "uuid": "29fa8a60-20f1-4d96-866d-04cfd323c801"
}
